<!DOCTYPE html>
<html>
    <body>
        <h1>Update article:</h1>
        <form method="POST" action="/articles/<%= @article.id %>">
            <input id="hidden" type="hidden" name="_method" value="patch">
            <h2><label for="title">Title: </label></h2>
            <h2><input type="text" name="title" value="<%= @article.title %>"></h2>
            <h2><label for="content">Content: </label></h2>
            <h2><input type="text" name="content" value="<%= @article.content %>"></h2>
            <input type="submit">
        </form>
    </body>
</html>